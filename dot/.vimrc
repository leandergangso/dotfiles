" tab settings
set shiftwidth=2
set tabstop=2

" keep cursor in middle
set scrolloff=10

" ignore case for search
set ignorecase
set showmatch

" see current mode
set showmode

" see line number
set number relativenumber

" timeout after
set timeoutlen=200

" highlight cursor line
" set cursorline

" esc with jj
imap jj <Esc>
imap JJ <Esc>

" auto completion menu after TAB
" set wildmenu

" ignore file types
" set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx

" dont fix EOL
set nofixeol
